<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <script src="~/libs/core-js/client/shim.min.js"></script>
    <script src="~/libs/zone.js/dist/zone.min.js"></script>
    <script src="~/libs/systemjs/dist/system.src.js"></script>

    @RenderSection("ScriptSection", required: false)

    @Styles.Render("~/Content/css");
</head>
<body>
    <div class="page-wrapper">
        <div class="static-navigation-bar" id="pt-navigation-bar">
            <div class="pt-logo-placeholder">
                <!-- image can be included here -->
            </div>

            <div class="pt-navigation-menu-placeholder">
                <ul class="pt-navigation-menu-buttons" id="pt-navigation-menu">
                    <li>
                        <a href="@Url.Action("Index", "Home")" title="Home" data-tooltip="Home" class="tooltip-bottom pt-nav-btn pt-home-btn">
                            <i class="fa fa-home"></i>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Questionnaire")" title="Questions" data-tooltip="Questions" class="tooltip-bottom pt-nav-btn pt-questions-btn">
                            <i class="fa fa-question"></i>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("About", "Home")" title="About" data-tooltip="About" class="tooltip-bottom pt-nav-btn pt-about-btn">
                            <i class="fa fa-info"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="main-content">
        <div class="pt-form-placeholder" style="padding: 0;">
            @RenderBody()
        </div>
    </div>
</body>
</html>